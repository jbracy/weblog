<div id="home">
	<h1> Welcome! </h1>
	
	<div class="Jordan">
		<% user = User.find_by_name('Jordan')%>
		<h2>Jordan's Blog</h2>
		<% if  user.blogs.last != nil %>
			<%blog=user.blogs.last%>
			<table>
				<tr>
					<td class="title">
						<strong><%=link_to user.blogs.last.title, blog_path(blog) %></strong>
					</td>
				</tr>
				<tr>
					<td class="blogtent"> 
						<%= user.blogs.last.content %>
					</td>
				</tr>
			</table>
